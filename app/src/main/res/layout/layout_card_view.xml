<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="net.skyestudios.mtgcardquery.CardViewActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Name:"
                        android:textSize="20sp"
                        tools:text="Card Name:" />

                    <TextView
                        android:id="@+id/name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/name_label"
                        android:paddingLeft="40dp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/colors_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/name_label"
                        android:layout_below="@+id/name_textView"
                        android:text="Colors:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/colors_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/name_textView"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/colors_label"
                        android:paddingLeft="40dp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mana_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/name_label"
                        android:layout_below="@+id/colors_textView"
                        android:text="Mana Cost:"
                        android:textSize="20sp"
                        tools:text="Mana Cost:" />

                    <HorizontalScrollView
                        android:id="@+id/manaCost_scroller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/mana_label"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/colors_textView"
                        android:layout_toRightOf="@+id/mana_label"
                        android:paddingLeft="40dp">

                        <LinearLayout
                            android:id="@+id/manaCost_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="false"
                            android:gravity="left|center_vertical"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/cmc_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/name_label"
                        android:layout_below="@+id/manaCost_scroller"
                        android:layout_marginTop="10dp"
                        android:text="CMC:"
                        android:textSize="20sp"
                        tools:text="CMC:" />

                    <TextView
                        android:id="@+id/cmc_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/manaCost_scroller"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/cmc_label"
                        android:paddingLeft="40dp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/types_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/name_label"
                        android:layout_below="@+id/cmc_textView"
                        android:layout_weight="2.10"
                        android:text="Type:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/types_textView"
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/cmc_textView"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/types_label"
                        android:layout_weight="0.38"
                        android:paddingLeft="40dp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cardText_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardText_label"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.04"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cardText_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/name_label"
                        android:layout_below="@+id/types_textView"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:text="Card Text:"
                        android:textSize="20sp"
                        tools:text="Card Text:" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>