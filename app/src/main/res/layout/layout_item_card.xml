<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:textSize="24sp"
        tools:text="Card Name" />

    <TextView
        android:id="@+id/card_mana_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/card_name"
        android:gravity="right"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        tools:text="{6}{G}{G}" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_name"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        tools:text="Creature - Wall" />

    <TextView
        android:id="@+id/card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_type"
        android:ellipsize="end"
        android:lines="3"
        android:paddingLeft="8dp"
        android:singleLine="false"
        tools:text="Text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text" />

</RelativeLayout>